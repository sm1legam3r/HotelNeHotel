<Window x:Class="HotelNeHotel.View.ChangeNewUserPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelNeHotel.View"
        mc:Ignorable="d"
        Title="Смена пароля" Height="450" Width="800"
        MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1"
                    Grid.Row="1">
            <TextBlock Text="Текущий пароль:"
                       FontSize="20"
                       Margin="0,5"/>
            <TextBox Name="OldPasswordTextBox"
                     FontSize="20"
                     Margin="0,5"/>

            <TextBlock Text="Новый пароль:"
                       FontSize="20"
                       Margin="0,5"/>
            <TextBox Name="NewPasswordTextBox"
                         FontSize="20"
                         Margin="0,5"/>

            <TextBlock Text="Подтверждение нового пароля:"
                       FontSize="20"
                       Margin="0,5"/>
            <TextBox Name="RepeatNewPasswordTextBox"
                     FontSize="20"
                     Margin="0,5"/>

            <Button Content="Изменить пароль"
                    Margin="0,5" Click="ChangePassword_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
