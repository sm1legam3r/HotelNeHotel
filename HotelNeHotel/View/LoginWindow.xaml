<Window x:Class="HotelNeHotel.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelNeHotel.View"
        mc:Ignorable="d"
        Title="Вход" Height="400" Width="450"
        MinHeight="400" MinWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="1"
                    Grid.Row="1">
            <TextBlock Text="Логин:"
                       FontSize="20"
                       Margin="0,5"/>
            
            <TextBox Name="LoginTextBox"
                     FontSize="20"
                     Margin="0,5"/>
            
            <TextBlock Text="Пароль:"
                       FontSize="20"
                       Margin="0,5"/>
            
            <PasswordBox Name="PasswordPasswordBox"
                         FontSize="20"
                         Margin="0,5"/>
            
            <Button Content="Войти"
                    Margin="0,5" Click="Login_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
